<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.CheckComboBox?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="xyz.gnas.piz.app.controllers.zip.ZipController">
	<children>
		<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<VBox fx:id="vboInputsAndActions">
					<children>
						<VBox fx:id="vboInputFields">
							<children>
								<HBox VBox.vgrow="NEVER">
									<children>
										<HBox alignment="CENTER_LEFT" styleClass="control-box"
											HBox.hgrow="ALWAYS">
											<children>
												<Button alignment="TOP_LEFT" mnemonicParsing="false"
													onAction="#selectInputFolder" prefHeight="25.0"
													prefWidth="130.0" styleClass="sm" text="Input folder"
													HBox.hgrow="NEVER">

													<graphic>
														<ImageView fitHeight="16.0" fitWidth="16.0"
															pickOnBounds="true" preserveRatio="true">
															<image>
																<Image url="@../../icons/input_folder.png" />
															</image>
														</ImageView>
													</graphic>
												</Button>
												<Label fx:id="lblInputFolder"
													maxWidth="1.7976931348623157E308" prefHeight="25.0"
													HBox.hgrow="ALWAYS">
													<HBox.margin>
														<Insets left="10.0" />
													</HBox.margin>
												</Label>
											</children>
										</HBox>
										<HBox alignment="CENTER_LEFT" styleClass="control-box"
											HBox.hgrow="ALWAYS">
											<children>
												<Button alignment="TOP_LEFT" mnemonicParsing="false"
													onAction="#selectOutputFolder" prefWidth="130.0"
													styleClass="sm" text="Output folder">
													<HBox.margin>
														<Insets />
													</HBox.margin>
													<graphic>
														<ImageView fitHeight="16.0" fitWidth="16.0"
															pickOnBounds="true" preserveRatio="true">
															<image>
																<Image url="@../../icons/output_folder.png" />
															</image>
														</ImageView>
													</graphic>
												</Button>
												<Label fx:id="lblOutputFolder"
													maxWidth="1.7976931348623157E308" prefHeight="25.0"
													HBox.hgrow="ALWAYS">
													<HBox.margin>
														<Insets left="10.0" />
													</HBox.margin>
												</Label>
											</children>
											<HBox.margin>
												<Insets left="10.0" />
											</HBox.margin>
										</HBox>
									</children>
								</HBox>
								<HBox alignment="CENTER_LEFT">
									<VBox.margin>
										<Insets top="10.0" />
									</VBox.margin>
									<children>
										<HBox alignment="CENTER_LEFT" styleClass="control-box">
											<children>
												<Label text="Perform zip on" />
												<CheckComboBox fx:id="ccbFileFolder"
													prefWidth="110.0">
													<HBox.margin>
														<Insets left="10.0" />
													</HBox.margin>
												</CheckComboBox>
											</children>
										</HBox>
										<HBox alignment="CENTER_LEFT" styleClass="control-box">
											<children>
												<TextField fx:id="txtProcessCount"
													alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="30.0"
													text="5">
													<HBox.margin>
														<Insets />
													</HBox.margin>
												</TextField>
												<Label text="simultaneous processes">
													<HBox.margin>
														<Insets left="5.0" />
													</HBox.margin>
												</Label>
											</children>
											<HBox.margin>
												<Insets left="10.0" />
											</HBox.margin>
										</HBox>
										<HBox alignment="CENTER_LEFT" styleClass="control-box">
											<children>
												<CheckBox fx:id="chkEncrypt"
													mnemonicParsing="false" selected="true" text="Encrypt">
													<HBox.margin>
														<Insets />
													</HBox.margin>
												</CheckBox>
												<HBox fx:id="hboPassword" alignment="CENTER_LEFT"
													styleClass="control-box">
													<padding>
														<Insets bottom="5.0" left="5.0" right="5.0"
															top="5.0" />
													</padding>
													<children>
														<Label text="Password">
															<HBox.margin>
																<Insets right="10.0" />
															</HBox.margin>
														</Label>
														<TextField fx:id="txtPassword"
															promptText="Password" visible="false">
															<HBox.margin>
																<Insets />
															</HBox.margin>
														</TextField>
														<PasswordField fx:id="pwfPassword"
															promptText="Password">
															<HBox.margin>
																<Insets />
															</HBox.margin>
														</PasswordField>
														<ImageView fx:id="imvMaskUnmask"
															fitHeight="16.0" fitWidth="16.0"
															onMouseClicked="#maskUnmask" pickOnBounds="true"
															preserveRatio="true">
															<image>
																<Image url="@../../icons/masked.png" />
															</image>
															<HBox.margin>
																<Insets left="5.0" />
															</HBox.margin>
														</ImageView>
													</children>
													<HBox.margin>
														<Insets left="10.0" />
													</HBox.margin>
												</HBox>
											</children>
											<HBox.margin>
												<Insets left="10.0" />
											</HBox.margin>
										</HBox>
									</children>
								</HBox>
								<HBox alignment="CENTER_LEFT">
									<children>
										<CheckBox fx:id="chkObfuscateFileName"
											mnemonicParsing="false" selected="true"
											text="Obfuscate file name">
											<HBox.margin>
												<Insets />
											</HBox.margin>
										</CheckBox>
										<HBox fx:id="hboReference" alignment="CENTER_LEFT"
											styleClass="control-box">
											<padding>
												<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
											</padding>
											<children>
												<CheckBox fx:id="chkAddReferences"
													mnemonicParsing="false" text="Add references">
													<HBox.margin>
														<Insets />
													</HBox.margin>
												</CheckBox>
												<HBox fx:id="hboTag" alignment="CENTER_LEFT"
													styleClass="control-box">
													<padding>
														<Insets bottom="5.0" left="5.0" right="5.0"
															top="5.0" />
													</padding>
													<children>
														<Label text="Tag" />
														<TextField fx:id="txtReferenceTag"
															promptText="Reference tag">
															<HBox.margin>
																<Insets left="10.0" />
															</HBox.margin>
														</TextField>
													</children>
													<HBox.margin>
														<Insets left="10.0" />
													</HBox.margin>
												</HBox>
											</children>
											<HBox.margin>
												<Insets left="10.0" />
											</HBox.margin>
										</HBox>
									</children>
									<VBox.margin>
										<Insets top="10.0" />
									</VBox.margin>
								</HBox>
							</children>
						</VBox>
						<HBox fx:id="hboActions" alignment="CENTER_LEFT">
							<children>
								<Button fx:id="btnStart" alignment="TOP_LEFT"
									mnemonicParsing="false" onAction="#start" prefWidth="100.0"
									styleClass="sm" text="Start">
									<graphic>
										<ImageView fitHeight="16.0" fitWidth="16.0"
											pickOnBounds="true" preserveRatio="true">
											<image>
												<Image url="@../../icons/start.png" />
											</image>
										</ImageView>
									</graphic>
								</Button>
								<Button fx:id="btnPauseResume" alignment="TOP_LEFT"
									disable="true" mnemonicParsing="false"
									onAction="#pauseOrResume" prefWidth="100.0" styleClass="sm"
									text="Pause">
									<HBox.margin>
										<Insets left="10.0" />
									</HBox.margin>
									<graphic>
										<ImageView fx:id="imvPauseResume" fitHeight="16.0"
											fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
											<image>
												<Image url="@../../icons/pause.png" />
											</image>
										</ImageView>
									</graphic>
								</Button>
								<Button fx:id="btnStop" alignment="TOP_LEFT"
									disable="true" mnemonicParsing="false" onAction="#stop"
									prefWidth="100.0" styleClass="sm" text="Stop">
									<HBox.margin>
										<Insets left="10.0" />
									</HBox.margin>
									<graphic>
										<ImageView fitHeight="16.0" fitWidth="16.0"
											pickOnBounds="true" preserveRatio="true">
											<image>
												<Image url="@../../icons/stop.png" />
											</image>
										</ImageView>
									</graphic>
								</Button>
							</children>
							<VBox.margin>
								<Insets top="10.0" />
							</VBox.margin>
						</HBox>
					</children>
				</VBox>
				<ScrollPane fitToWidth="true"
					style="-fx-background: white;" VBox.vgrow="ALWAYS">
					<VBox.margin>
						<Insets top="10.0" />
					</VBox.margin>
					<content>
						<VBox fx:id="vboList" />
					</content>
				</ScrollPane>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</VBox>
	</children>
</AnchorPane>
