<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import tornadofx.control.DateTimePicker?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="920.0" xmlns="http://javafx.com/javafx/10.0.1"
            fx:controller="xyz.gnas.piz.reference.ReferenceController">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <VBox onKeyReleased="#filtersKeyPressed">
            <HBox alignment="CENTER_LEFT">
                <HBox alignment="CENTER_LEFT" styleClass="control-box">
                    <Label text="From"/>
                    <DateTimePicker fx:id="dtpFrom" format="dd MMMM yyyy HH:mm">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </DateTimePicker>
                </HBox>
                <HBox alignment="CENTER_LEFT" styleClass="control-box">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                    <Label text="To"/>
                    <DateTimePicker fx:id="dtpTo" format="dd MMMM yyyy HH:mm">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </DateTimePicker>
                </HBox>
            </HBox>
            <HBox alignment="CENTER_LEFT">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" styleClass="control-box" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                        <Label text="Original file/folder"/>
                        <ComboBox fx:id="cbbOriginal" prefWidth="100.0">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <TextField fx:id="ttfOriginal" maxWidth="1.7976931348623157E308"
                                   promptText="Original file/folder" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </TextField>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" styleClass="control-box" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                        <Label text="Zip file">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="cbbZip" prefWidth="100.0">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <TextField fx:id="ttfZip" maxWidth="1.7976931348623157E308" promptText="Zip file"
                                   HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </TextField>
                    </HBox>
                </HBox>
            </HBox>
            <HBox alignment="CENTER_LEFT">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
                <HBox alignment="CENTER_LEFT" styleClass="control-box">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <Label text="Tag"/>
                    <ComboBox fx:id="cbbTag" prefWidth="100.0">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </ComboBox>
                    <TextField fx:id="ttfTag" prefWidth="100.0" promptText="Tag">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </TextField>
                </HBox>
                <Button mnemonicParsing="false" onAction="#filter" prefWidth="80.0" text="Filter">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                    <graphic>
                        <MaterialIconView glyphName="FILTER_LIST" size="16"/>
                    </graphic>
                </Button>
            </HBox>
            <HBox alignment="CENTER_LEFT">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
                <Label fx:id="lblReferenceCount" text="reference count">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </Label>
                <Button mnemonicParsing="false" onAction="#scrollToTop" prefWidth="150.0" text="Scroll to top">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                    <graphic>
                        <MaterialIconView glyphName="KEYBOARD_ARROW_UP" size="16"/>
                    </graphic>
                </Button>
                <Button onAction="#scrollToBottom" prefWidth="150.0" text="Scroll to bottom">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                    <graphic>
                        <MaterialIconView glyphName="KEYBOARD_ARROW_DOWN" size="16"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
        <TableView fx:id="tbvTable" editable="true" onKeyReleased="#tableKeyReleased" onSort="#sortTable"
                   VBox.vgrow="ALWAYS">
            <placeholder>
                <Label/>
            </placeholder>
            <columns>
                <TableColumn fx:id="tbcDate" editable="false" maxWidth="120.0" minWidth="120.0" prefWidth="120.0"
                             style="-fx-alignment: CENTER-RIGHT;" text="Date"/>
                <TableColumn fx:id="tbcTag" maxWidth="120.0" minWidth="120.0" onEditCancel="#cancelEdit"
                             onEditCommit="#commitEdit" onEditStart="#startEdit" prefWidth="120.0" text="Tag"/>
                <TableColumn fx:id="tbcOriginal" onEditCancel="#cancelEdit" onEditCommit="#commitEdit"
                             onEditStart="#startEdit" prefWidth="300.0" text="Original file/folder"/>
                <TableColumn fx:id="tbcZip" onEditCancel="#cancelEdit" onEditCommit="#commitEdit"
                             onEditStart="#startEdit" prefWidth="300.0" text="Zip file"/>
            </columns>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox prefHeight="2.0" prefWidth="900.0" VBox.vgrow="NEVER">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <Button mnemonicParsing="false" onAction="#add" prefWidth="150.0" text="Add reference">
                <graphic>
                    <MaterialIconView glyphName="ADD" size="16"/>
                </graphic>
            </Button>
            <Button mnemonicParsing="false" fx:id="btnDelete" onAction="#delete" prefWidth="150.0"
                    text="Delete reference">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
                <graphic>
                    <MaterialIconView glyphName="DELETE" size="16"/>
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#save" prefWidth="150.0" text="Save references">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
                <graphic>
                    <MaterialIconView glyphName="SAVE" size="16"/>
                </graphic>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
