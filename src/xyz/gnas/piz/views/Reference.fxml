<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xyz.gnas.piz.controllers.ReferenceController">
	<children>
		<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
            <Label fx:id="lblReferenceCount" text="Label" />
				<TableView fx:id="tvTable" editable="true" VBox.vgrow="ALWAYS">
					<columns>
						<TableColumn fx:id="tcDate" prefWidth="132.0" text="Date" />
						<TableColumn fx:id="tcTag" prefWidth="166.0" text="Tag" />
						<TableColumn fx:id="tcOriginal" prefWidth="300.0" text="Original file/folder" />
						<TableColumn fx:id="tcZip" prefWidth="300.0" text="Zip file" />
					</columns>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
				</TableView>
				<HBox fx:id="hbActions" VBox.vgrow="NEVER">
					<children>
						<Button mnemonicParsing="false" onAction="#add" prefWidth="150.0" text="Add reference" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#delete" prefWidth="150.0" text="Delete reference">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#save" prefWidth="150.0" text="Save references">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
					</children>
					<VBox.margin>
						<Insets top="10.0" />
					</VBox.margin>
				</HBox>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</VBox>
	</children>
</AnchorPane>
